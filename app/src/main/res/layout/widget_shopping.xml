<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_shopping_background"
    android:padding="12dp"
    android:id="@+id/widget_shopping_root">

    <TextView
        android:id="@+id/widget_shopping_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/shopping_list_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#DE000000"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/widget_shopping_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_shopping_header"
        android:gravity="center"
        android:text="@string/shopping_list_empty"
        android:textSize="13sp"
        android:textColor="#88000000"
        android:visibility="gone" />

    <ListView
        android:id="@+id/widget_shopping_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_shopping_header"
        android:divider="@null"
        android:dividerHeight="4dp"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false" />

</RelativeLayout>
